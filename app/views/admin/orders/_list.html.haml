- if orders.any?
  %table.striped.responsive-table
    %thead
      %tr
        %th
        %th Movie Title
        %th Showtime
        %th Customer Name
        %th Customer Email
        %th Purchase Amount
    %tbody
      #orders
        - orders.each do |order|
          %tr
            %td
              - if order.movie.nil?
                %icon.material-icons error
            %td= order.cached_movie_title
            %td= order.cached_showtime_name
            %td= order.customer_name
            %td= order.customer_email
            %td= order.purchase_amount
- else
  %p.error-block= 'There are currently no orders for this film.'