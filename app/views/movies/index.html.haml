%body
  .container
    .row
      %br
      %h4.title Now Playing
    .row
      #movies.center-align
        - @movies.each do |movie|
          .col.s6.m6.l4
            .card.hoverable
              .card-image
                - if movie.title == "Interstellar"
                  =image_tag('interstellar.jpg', class: "movie-poster")
                - else
                  =image_tag('batvsup.jpg', class: "movie-poster")
              .card-content
                %h6= movie.title
              .card-action
                = link_to 'showtimes', "#", class: 'activator'
                = link_to 'buy ticket', new_movie_order_path(movie_id: movie.id)
              .card-reveal
                %span.card-title.grey-text.text-darken-4
                  %i.material-icons.right close
                  %h3= "#{movie.title}"
                  .divider
                  .section
                - movie.showtimes. each do |showtime|
                  %p= showtime.future_shows