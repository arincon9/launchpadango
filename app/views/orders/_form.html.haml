= simple_form_for(@order) do |f|
  = f.association :movie
  = f.association :showtime, label_method: :display_name, collection: Showtime.upcoming
  = f.input :customer_name
  = f.input :customer_email
  = f.input :billing_address_1
  = f.input :billing_address_2
  = f.input :billing_zipcode
  = f.input :credit_card_number
  = f.input :credit_card_cvv
  = f.input :credit_card_expiration
  = f.button :submit